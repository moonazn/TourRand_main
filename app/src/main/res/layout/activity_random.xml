<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_colorback_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="커피는 누가 쏠래?"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/pyeongchang_regular"
        app:layout_constraintBottom_toTopOf="@+id/random_one"
        android:layout_marginBottom="10dp"/>

    <android.widget.Button
        android:id="@+id/random_one"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/round_rectangle_realgray"
        android:text="🧋우리 중에 한명 뽑기"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/pyeongchang_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="완전 랜덤을 원해!"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/pyeongchang_regular"
        app:layout_constraintBottom_toTopOf="@+id/random_custom"
        android:layout_marginBottom="10dp"/>

    <android.widget.Button
        android:id="@+id/random_custom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/random_one"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/round_rectangle_realgray"
        android:text="🎊커스텀 룰렛 만들기"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/pyeongchang_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="이동 중에 귀가 심심한걸"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/pyeongchang_regular"
        app:layout_constraintBottom_toTopOf="@+id/random_youtube"
        android:layout_marginBottom="10dp"/>

    <android.widget.Button
        android:id="@+id/random_youtube"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/random_custom"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/round_rectangle_realgray"
        android:text="🎵랜덤 플레이리스트 재생"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/pyeongchang_bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <include layout="@layout/bottom"></include>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>