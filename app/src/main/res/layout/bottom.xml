<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_corner_background"
        android:weightSum="4">

        <ImageView
            android:id="@+id/editPage"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/edit_home_off"/>

        <ImageView
            android:id="@+id/weatherPage"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/weather_off"/>

        <ImageView
            android:id="@+id/randomPage"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/random_off"/>
        <ImageView
            android:id="@+id/groupPage"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:src="@drawable/group_off"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>