<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/backbut"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:id="@+id/noticeBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/notice"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/noticeTxt"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:background="@drawable/speechback"
        android:layout_marginRight="17dp"
        android:text="여행지 후보 입력 시 지명으로 입력해주세요! \n ex) 서울, 양양, 강릉, 광주광역시 등 "
        android:fontFamily="@font/pyeongchang_regular"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/noticeBtn"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearBack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:id="@+id/elementContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <android.widget.Button
            android:id="@+id/addButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="여행지 후보 추가하기"
            android:fontFamily="@font/pyeongchang_bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_filled_square_orange"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>

        <android.widget.Button
            android:id="@+id/nextButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="룰렛 돌리기"
            android:fontFamily="@font/pyeongchang_bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/round_rectangle_blue"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
