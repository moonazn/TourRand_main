<!-- res/layout/item_trip_plan.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="305dp"
    android:layout_height="90dp"
    android:padding="9dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_rectangle"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/trip_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="여행 이름"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/travel_date_text_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#666666"
            android:text="2024-06-20 ~ 2024-07-01"
            android:layout_marginLeft="3dp" />

        <TextView
            android:id="@+id/d_day_text_view"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#FF0040"
            android:text="D-2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member1_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_circle_background_color="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/cat"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member2_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/dog"
            app:civ_circle_background_color="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member3_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/tiger"
            app:civ_circle_background_color="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member4_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/elephant"
            app:civ_circle_background_color="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/default_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-7dp"
            android:src="@drawable/more"
            android:background="@drawable/circular_background"
            android:scaleType="centerCrop"
            />

    </LinearLayout>



</LinearLayout>
